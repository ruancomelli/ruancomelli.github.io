# The URL the site will be built for
base_url = "https://ruancomelli.github.io"

# The site title and description; used in feeds by default.
author = "Ruan Comelli"

# The default language; used in feeds.
default_language = "en"

# Whether to automatically compile all Sass files in the sass directory
compile_sass = true

# Theme configuration
theme = "linkita"

# Markdown configuration
[markdown]
# Whether to do syntax highlighting
# Theme can be customized by setting the `highlight_theme` variable to a theme supported by Zola
highlight_code = true

# When set to "true", missing highlight languages are treated as errors. 
error_on_missing_highlight = true

# The theme to use for syntax highlighting
highlight_theme = "dracula"

# Language-specific configurations
[languages.en]
title = "Ruan Comelli"
description = "Software Engineer with a strong focus on AI, code quality, and developer tools"
build_search_index = true
generate_feeds = true
feed_filenames = ["atom.xml"]
taxonomies = [{ name = "tags", feed = true, paginate_by = 5 }]

[languages.en.search]
# Whether to include the title of the page/section in the index
include_title = true
# Whether to include the description of the page/section in the index
include_description = true
# Whether to include the RFC3339 datetime of the page in the search index
include_date = true
# Whether to include the path of the page/section in the index (the permalink is always included)
include_path = true
# Whether to include the rendered content of the page/section in the index
include_content = true

[languages.pt]
title = "Ruan Comelli"
description = "Engenheiro de Software com foco em IA, qualidade de código e ferramentas para desenvolvedores"
build_search_index = true
generate_feeds = true
feed_filenames = ["atom.xml"]
taxonomies = [{ name = "tags", feed = true, paginate_by = 5 }]

# Search configuration
[languages.pt.search]
# Whether to include the title of the page/section in the index
include_title = true
# Whether to include the description of the page/section in the index
include_description = true
# Whether to include the RFC3339 datetime of the page in the search index
include_date = true
# Whether to include the path of the page/section in the index (the permalink is always included)
include_path = true
# Whether to include the rendered content of the page/section in the index
include_content = true

# Extra configuration
[extra]
# Site-wide settings
title_separator = " | "
header_menu_name = "main_menu"
use_cdn = false
disable_default_favicon = false
math = true
mermaid = true
comment = true

# Header menu configuration
[extra.menus]
main_menu = [
	{ url = "$BASE_URL/about/", name = "About" },
	{ url = "$BASE_URL/projects/", name = "Projects" },
	{ url = "$BASE_URL/blog/", name = "Blog" },
	{ url = "$BASE_URL/tags/", name = "Tags" },
]

# Author profile configuration
[extra.profiles.ruancomelli.en]
avatar_url = "images/profile-hero.jpg"
avatar_invert = false
name = "Ruan Comelli"
bio = "Software Engineer with a strong focus on AI, code quality, and developer tools"
social = [
	{ name = "github", url = "https://github.com/ruancomelli" },
	{ name = "linkedin", url = "https://www.linkedin.com/in/ruancomelli/" },
	{ name = "email", url = "mailto:ruancomelli@gmail.com" },
	{ name = "rss", url = "$BASE_URL/atom.xml" },
]
[extra.profiles.ruancomelli.pt]
avatar_url = "images/profile-hero.jpg"
avatar_invert = false
name = "Ruan Comelli"
bio = "Engenheiro de Software com um forte foco em IA, qualidade de código e ferramentas de desenvolvedor"
social = [
	{ name = "github", url = "https://github.com/ruancomelli" },
	{ name = "linkedin", url = "https://www.linkedin.com/in/ruancomelli/" },
	{ name = "email", url = "mailto:ruancomelli@gmail.com" },
	{ name = "rss", url = "$BASE_URL/atom.xml" },
]

# Open Graph configuration for social media cards
[extra.profiles.ruancomelli.open_graph]
image = "images/profile-hero.jpg"
image_alt = "Ruan Comelli's profile picture"
first_name = "Ruan"
last_name = "Comelli"
username = "ruancomelli"
gender = "male"

# Footer configuration
[extra.footer]
since = 2025
license_url = "https://creativecommons.org/licenses/by-sa/4.0/"
copyright = "&copy; $YEAR Ruan Comelli &vert; [CC BY-SA 4.0]($LICENSE_URL)"
